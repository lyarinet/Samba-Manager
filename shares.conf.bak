# Samba shares configuration

[secure-share]
   comment = Secure Shared Folder with Full Access
   path = /var/www/
   valid users = @smbusers,root
   writable = yes
   browsable = yes
   read only = no
   create mask = 0770
   directory mask = 0770
   force group = smbusers
   inherit permissions = yes

[share]
   comment = Secure Shared Folder with Full Access
   path = /home/fida/samba_manager
   valid users = @smbusers,root
   writable = yes
   browsable = yes
   read only = no
   create mask = 0770
   directory mask = 0770
   force group = smbusers
   inherit permissions = yes

